<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.AddSnapFragment">

    <ImageView
        android:id="@+id/img_selected"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        android:layout_margin="@dimen/_25sdp" />

    <EditText
        android:id="@+id/edt_message"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:hint="hey bro!"
        android:textColor="@android:color/black"
        android:layout_below="@id/img_selected"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_addSnap"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_message"
        android:background="@drawable/rounded_edittext"
        android:text="@string/choose_image"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_SendTo"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_addSnap"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/rounded_edittext"
        android:text="@string/send_to"/>


</RelativeLayout>